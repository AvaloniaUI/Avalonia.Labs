<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="using:Avalonia.Labs.Controls">

  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/NavigationControl.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/TabControl.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/TabItem.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/TabHeader.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/TabHeaderItem.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/FlipView.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/FlipViewItem.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/FlipViewScrollViewer.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/AsyncImage.xaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/StepBar.axaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/ContentDialog.axaml" />
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/InfoBadge.axaml"/>
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/NotificationControl.axaml"/>
        <MergeResourceInclude Source="avares://Avalonia.Labs.Controls/Themes/Controls/NotificationHost.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Styles.Resources>
  
  <StyleInclude Source="NotificationHostStyles.axaml"/>
  <StyleInclude Source="NotificationControlStyles.axaml"/>
  
  <Style Selector="control|FlipView > control|FlipViewItem">
    <Setter Property="Width"
            Value="{Binding $parent[control:FlipView].Bounds.Width}" />
    <Setter Property="Height"
            Value="{Binding $parent[control:FlipView].Bounds.Height}" />
  </Style>
</Styles>
