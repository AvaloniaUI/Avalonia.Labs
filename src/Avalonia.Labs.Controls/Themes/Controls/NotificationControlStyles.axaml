<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia.Labs.Controls">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
      <controls:NotificationControl />
    </Border>
  </Design.PreviewWith>

    <!-- Type-specific styles using theme-aware resources -->
    <Style Selector="controls|NotificationControl[Type=Information]">
      <Setter Property="Background" Value="{DynamicResource NotificationInformationBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource NotificationInformationForeground}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Warning]">
      <Setter Property="Background" Value="{DynamicResource NotificationWarningBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource NotificationWarningForeground}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Error]">
      <Setter Property="Background" Value="{DynamicResource NotificationErrorBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource NotificationErrorForeground}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Success]">
      <Setter Property="Background" Value="{DynamicResource NotificationSuccessBackground}" />
      <Setter Property="Foreground" Value="{DynamicResource NotificationSuccessForeground}" />
    </Style>


    <!-- Icon styles remain the same -->
    <Style Selector="controls|NotificationControl[Type=Information] /template/ PathIcon#StatusIcon">
      <Setter Property="Data" Value="{DynamicResource NotificationInformationIcon}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Warning] /template/ PathIcon#StatusIcon">
      <Setter Property="Data" Value="{DynamicResource NotificationWarningIcon}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Error] /template/ PathIcon#StatusIcon">
      <Setter Property="Data" Value="{DynamicResource NotificationErrorIcon}" />
    </Style>
    <Style Selector="controls|NotificationControl[Type=Success] /template/ PathIcon#StatusIcon">
      <Setter Property="Data" Value="{DynamicResource NotificationSuccessIcon}" />
    </Style>


    <!-- Animation styles -->
    <Style Selector="controls|NotificationControl:open /template/ Panel#PART_LayoutRoot">
      <Setter Property="IsVisible" Value="True" />
      <Style.Animations>
        <Animation Duration="0:0:0.25" FillMode="Forward">
          <KeyFrame Cue="0%">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Opacity" Value="0" />
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Opacity" Value="1" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>

    <Style Selector="controls|NotificationControl:hidden /template/ Panel#PART_LayoutRoot">
      <Style.Animations>
        <Animation Duration="0:0:0.167" FillMode="Forward">
          <KeyFrame Cue="0%">
            <Setter Property="Opacity" Value="1" />
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="Opacity" Value="0" />
            <Setter Property="IsVisible" Value="False" />
          </KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>

    <!-- ensure that textblocks allow word wrapping -->
    <Style Selector="controls|NotificationControl /template/ ContentPresenter > TextBlock">
      <Setter Property="TextWrapping" Value="WrapWithOverflow" />
      <Setter Property="MaxLines" Value="5" />
    </Style>
</Styles>

